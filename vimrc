" Make things colourful.
colo slate 
syntax on

" Set the font when in a GUI.
set guifont=Hack\ Regular:h14

" Show a status bar
set laststatus=2

" Show line numbers
set number
highlight LineNr ctermfg=darkgrey

" Sane indentation
set shiftwidth=4
set softtabstop=4
set expandtab

" .vimrc ends here
